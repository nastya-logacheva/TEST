[Unit]
Description=Prometheus
Wants=network-online.target
After=network-online.target

[Service]
User=prometheus
ExecStart=/opt/prometheus-2.51.1.linux-amd64/prometheus \
  --config.file=/opt/prometheus-2.51.1.linux-amd64/prometheus.yml \
  --storage.tsdb.path=/opt/prometheus-2.51.1.linux-amd64/data \
  --web.listen-address="0.0.0.0:9090"
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
